<section class="bg-white dark:bg-gray-900">
  <div class="py-2 lg:py-16 px-2 mx-auto max-w-screen-md">
    <h2
      class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white"
    >Hubungi saya</h2>
    <p
      class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl"
    >Mari berdiskusi</p>


    <form {{on "submit" this.onSubmit}} class="space-y-8">
  <div>
    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Email Kamu *</label>
    <input
      value={{this.email}}
      type="email"
      id="email"
      class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
      placeholder="john@example.com"
      required
      {{on "input" this.updateEmail}}
    />
  </div>

  <div>
    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Nama Kamu *</label>
    <input
      value={{this.name}}
      type="text"
      id="name"
      class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
      placeholder="John doe"
      required
      {{on "input" this.updateName}}
    />
  </div>

  <div>
    <label for="phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">No Whatsapp (Boleh kamu isi atau tidak)</label>
    <input
      value={{this.phone}}
      type="tel"
      id="phone"
      class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
      placeholder="089719xxxxxx"
      {{on "input" this.updatePhone}}
    />
  </div>

  <div>
    <label for="subject" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Subject *</label>
    <input
      value={{this.subject}}
      type="text"
      id="subject"
      class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
      placeholder="Apa yang dapat saya bantu"
      required
      {{on "input" this.updateSubject}}
    />
  </div>

  <div class="sm:col-span-2">
    <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Ketik pesan kamu disini *</label>
    <textarea
      value={{this.message}}
      id="message"
      rows="6"
      class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
      placeholder="Ketik pesan kamu disini..."
      required
      {{on "input" this.updateMessage}}
    ></textarea>
  </div>
  
  <button type="submit" disabled={{this.isDisabled}} class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 me-2 mb-2">
    Kirim pesan
  </button>
</form>


  </div>
</section>