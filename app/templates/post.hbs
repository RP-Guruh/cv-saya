<main
  class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased"
>

  <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
    <article
      class="space-y-5 article-detail mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert"
    >
      <header class="mb-4 lg:mb-6 not-format">
        <address class="flex items-center mb-6 not-italic">
          <div
            class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white"
          >
            <img
              class="mr-4 w-16 h-16 rounded-full"
              src={{@model.photo}}
              alt={{@model.created_by}}
            />
            <div>
              <a
                href="#"
                rel="author"
                class="text-xl font-bold text-gray-900 dark:text-white"
              >{{@model.created_by}} | Author</a>

              <p class="text-base text-gray-500 dark:text-gray-400"><time
                  pubdate
                  datetime="2022-02-08"
                  title="February 8th, 2022"
                >{{format-date @model.created_at}}</time></p>
              <p class="text-base text-gray-500 dark:text-gray-400"><time
                  pubdate
                  datetime="2022-02-08"
                  title="February 8th, 2022"
                >Edit at {{format-date @model.created_at}}</time></p>

            </div>
          </div>
        </address>
        <h1
          class="martel-sans-black mb-4 text-3xl leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"
        >{{@model.title}}</h1>
      </header>

      <div class="text-sm leading-6">
        <p class="font-semibold text-gray-900">

          {{#each @model.tags as |tag|}}

            <Tag @tagName={{tag.name}} />

          {{/each}}

        </p>
      </div>

      {{{img-prefix @model.body}}}
    </article>
  </div>
</main>

